@{
    ViewBag.Title = "邀请好友订房报名列表";
    ViewBag.Description = "邀请好友订房报名列表";
    ViewBag.Keywords = "邀请好友订房报名列表";
    var users = ViewBag.users as List<Windy.WebMVC.Web2.Models.Users>;

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="icon" href="/logo.ico" type="image/x-icon" />

<div class="am-container " id="main">

    <div class="am-g am-g-fixed">
        <div class="am-u-md-8">
            <ol class="am-breadcrumb">
                <li><a href="/index.html" class="am-icon-home">首页</a></li>

                <li href="/invite/index.htm">邀请好友订房列表</li>

            </ol>

            <div class="banner_navbg">
                <div class="am-g">
                    <div class="am-u-md-12">
                        <div class="banner_nav am-fr">


                        </div>
                    </div>
                </div>
            </div>
            @if (users != null)
            {
                foreach (var item in users)
                {
                    <div class="inner-box blog-img">
                        <div class="am-g">
                            <div class="am-u-sm-3">
                                <a class="blog-a-curse" target="_blank" href="/invite/write/@(new HtmlString(item.ID.ToString() + ".htm"))">
                                    <img alt="" src="~/Content/images/sui/defaultpic.gif">
                                </a>
                            </div>

                            <div class="am-u-sm-9">
                                <div class="blog-header">
                                    <a href="#" target="_blank" class="blog-category">
                                        @if (item.EmployeeID == 0)
                                        {
                                            @(new HtmlString("邀请待确定"))
                                        }
                                        else
                                        {

                                            @(new HtmlString("邀请成功"))
                                        }
                                    </a>
                                </div>
                                <p class="blog-content-show">
                                    姓名: @item.Name
                                    <br />电话：@item.Tel
                                    <br />所在学校 ：@item.School
                                    <br />报考学校：@item.ExamSchool
                                    <br />期望室友：@item.ExceptRoomie
                                    <br />备注：@item.Baks

                                </p>
                                <div class="am-fr">
                                    <button type="button" class="am-badge am-badge-success am-round " onclick="location.href='/invite/write/@item.ID'">修改</button>

                                </div>


                            </div>
                        </div>
                    </div>
                }
            }


        </div>

        <script type="text/javascript">



        </script>
        <div class="am-u-md-4" id="my-side">


            <div class="side-box">
                <div class="my-side-title">
                    <span class="am-icon-pencil"> 功能区</span>
                </div>
                <button type="button" class="am-btn am-btn-primary am-btn-block" onclick="location.href='/invite/write'">
                    <i class="am-icon-pencil"></i>
                    邀请新好友订房
                </button>
                <button type="button" class="am-btn am-btn-primary am-btn-block" onclick="location.href='/invite/index.htm'">
                    <i class="am-icon-user"></i>
                    我邀请好友的列表
                </button>
            </div>
            @Html.Partial("sidebox")
            @Html.Partial("sidebox2")
            @Html.Partial("sidebox3")
        </div>

    </div>

</div>

<div class="am-modal am-modal-confirm" tabindex="-1" id="bolg-delete-confirm">
    <div class="am-modal-dialog">
        <div class="am-modal-hd">警告！</div>
        <div class="am-modal-bd">
            您确定要删除这条记录吗？
        </div>
        <div class="am-modal-footer">
            <span class="am-modal-btn" data-am-modal-cancel>取消</span>
            <span class="am-modal-btn" data-am-modal-confirm>确定</span>
        </div>
    </div>
</div>
