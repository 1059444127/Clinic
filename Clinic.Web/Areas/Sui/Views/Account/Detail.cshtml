@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/sui/Views/Shared/_Layout.cshtml";
}
@model Windy.WebMVC.Web2.Models.OAuthUser
<div class="content profile">
    <header class="bar bar-nav">
        <a class="button button-link button-nav pull-left" href="/sui/account/index">
            <span class="icon icon-left"></span>
        </a>
        <h1 class="title">个人资料</h1>
    </header>
    <div class="list-block">
        <ul>
            <li style="height: 3rem;">
                <div class="item-content" style="min-height: 3rem;">
                    <div class="item-media"><img src="@Model.Headimgurl" height="auto" style='width: 2.2rem;'></div>
                    <div class="item-inner" style="min-height: 3rem;">
                        <div class="item-title-row">
                        </div>
                        <div class="item-subtitle">头像</div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">昵称</div>
                        <div class="item-input">
                            <input id="nickname" type="text" name="nickname" placeholder="用户昵称" value="@Model.NickName">
                        </div>
                    </div>
                </div>
            </li>
        </ul>
        <ul style="margin-top:.5rem;">

            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">真实姓名</div>
                        <div class="item-input">
                            <input id="Name" type="text" name="Name" placeholder="请输入真实姓名" value="@Model.Name">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">手机号</div>
                        <div class="item-input">
                            <input id="Tel" type="text" name="Tel" placeholder="请输入手机号" value="@Model.Tel">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">性别</div>
                        <div class="item-input">
                            <select name="sex">
                                @if (Model.Sex == 1)
                                {
                                    <option selected>男</option>
                                    <option>女</option>
                                }
                                else if (Model.Sex == 2)
                                {
                                    <option>男</option>
                                    <option selected>女</option>
                                }
                                else
                                {
                                    <option>男</option>
                                    <option>女</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </li>

        </ul>
        <ul style="margin-top:.5rem">

            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">国家</div>
                        <div class="item-input">
                            <input id="Country" type="text" name="Country" placeholder="国家" value="@Model.Country">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">省份</div>
                        <div class="item-input">
                            <input id="Province" type="text" name="Province" placeholder="省份" value="@Model.Province">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">城市</div>
                        <div class="item-input">
                            <input id="City" type="text" name="City" placeholder="城市" value="@Model.City">
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    @Html.Partial("Advert")
</div>