@{
    ViewBag.Title = "考试订房报名";
    Layout = "~/Areas/sui/Views/Shared/_Layout.cshtml";

}
@model Windy.WebMVC.Web2.Models.Users
<script>
    function submit() {
        var tel = $("#Tel").val();
        var name = $("#Name").val();
        if (tel == "") {
            $.toast("请输入手机号码");
            return;
        }
        $.ajax({
            type: 'POST',
            url: '/sui/account/UserInfo',
            //data: { "Name": name, "Tel": tel },
            data: $('#form').serialize(),
            success: function (response, status, xhr) {
                $.toast(response.message);
            },
            error: function (xhr, status, statusText) {
                $.toast("操作失败：" + statusText);
            }
        });
    }
</script>
<div class="content profile">
    <header class="bar bar-nav">
        <a class="button button-link button-nav pull-left" href="/sui/account/index">
            <span class="icon icon-left"></span>
        </a>
        <h1 class="title">考试订房报名</h1>
    </header>
    <form id="form" action="#" onsubmit="return false" >

        <input type="hidden" name="ID" value="@Model.ID" />
        <div class="list-block" id="form">
            <ul style="margin-top:.5rem;">
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">真实姓名</div>
                            <div class="item-input">
                                <input id="Name" type="text" name="Name" placeholder="请输入真实姓名" value="@Model.Name">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">手机号</div>
                            <div class="item-input">
                                <input id="Tel" type="text" name="Tel" placeholder="请输入手机号" value="@Model.Tel">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">性别</div>
                           
                            <div class="item-input">
                                <select id="Gender" name="Gender">
                                    @if (Model.Gender == "男")
                                    {
                                        <option selected="selected">男</option>
                                        <option>女</option>
                                    }
                                    else
                                    {
                                        <option >男</option>
                                        <option selected="selected">女</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">所在学校</div>
                            <div class="item-input">
                                <input id="School" type="text" name="School" placeholder="" value="@Model.School">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">报考学校</div>
                            <div class="item-input">
                                <input id="ExamSchool" type="text" name="ExamSchool" placeholder="" value="@Model.ExamSchool">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">考点</div>
                            <div class="item-input">
                                <input id="ExamPlace" type="text" name="ExamPlace" placeholder="" value="@Model.ExamPlace">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">意向同住人</div>
                            <div class="item-input">
                                <input id="ExceptRoomie" type="text" name="ExceptRoomie" placeholder="" value="@Model.ExceptRoomie">
                            </div>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title label">备注</div>
                            <div class="item-input">
                                <input id="Baks" type="text" name="Baks" placeholder="" value="@Model.Baks">
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="content-block">
            <div class="row">
                <div class="col-50"><a href="/sui/account/" class="button button-big button-fill button-danger">返回</a></div>
                <div class="col-50"><a href="#" onclick="submit();return false;" class="button button-big button-fill button-success">提交</a></div>
            </div>
        </div>
    </form>
    @Html.Partial("Advert")

</div>
